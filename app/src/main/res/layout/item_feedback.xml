<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/feed_title"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        tools:text="Константин Иванович, 25 лет"
        app:fontFamily="@font/roboto_medium_pro"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:drawableStart="@drawable/ic_account_circle_24dp"
        android:gravity="center_vertical"
        android:drawablePadding="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/feed_description"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="10dp"
        tools:text="Ля ля баля отзыв"
        app:fontFamily="@font/roboto_regular_pro"
        android:textSize="13sp"
        android:textColor="@color/titleColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>