<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/action_img_max"
                android:scaleType="fitXY"
                android:layout_width="800dp"
                android:layout_height="214dp"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/img_title"
                android:layout_width="450dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/roboto_medium_pro"
                android:textColor="@color/white"
                android:textSize="24sp" />
        </FrameLayout>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/body_title"
            android:layout_width="match_parent"
            android:layout_marginTop="22dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:textSize="20sp"
            android:fontFamily="@font/roboto_medium_pro"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/body_description"
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content"
            android:textColor="@color/titleColor"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textSize="18sp"
            android:fontFamily="@font/roboto_regular_pro"/>
        <androidx.appcompat.widget.AppCompatButton
            android:textSize="12sp"
            android:textColor="@color/colorAccent"
            android:id="@+id/callback_action"
            android:background="@drawable/sign_up_button"
            android:layout_width="269dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="17dp"
            android:text="@string/message_31"
            android:fontFamily="@font/roboto_medium_pro" />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content"
            android:textColor="@color/titleColor"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:textAllCaps="true"
            android:text="@string/message_45"
            android:textSize="20sp"
            android:fontFamily="@font/roboto_medium_pro"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_other_actions"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <include android:id="@+id/incFlower" layout="@layout/flower_layout"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
